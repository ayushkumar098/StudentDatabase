<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Student Information Form</h1>
    <form action="/add" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required /><br /><br />

      <label for="regNo">Registration Number:</label>
      <input type="text" id="regNo" name="regNo" required /><br /><br />

      <label for="branch">Branch:</label>
      <select id="branch" name="branch">
        <option value="Computer Science">Computer Science</option>
        <option value="Artificial Intelligence">Artificial Intelligence</option>
        <option value="Cloud Computing">Cloud Computing</option>
        <option value="Cyber Security">Cyber Security</option>
        <option value="Internet of Things">Internet of Things</option>
      </select><br /><br />

      <label for="passingYear">Year of Passing:</label>
      <input
        type="number"
        id="passingYear"
        name="passingYear"
        required
      /><br /><br />

      <label for="class10Marks">Class 10 Marks:</label>
      <input
        type="number"
        id="class10Marks"
        name="class10Marks"
        step="0.01"
        required
      /><br /><br />

      <label for="class12Marks">Class 12 Marks:</label>
      <input
        type="number"
        id="class12Marks"
        name="class12Marks"
        step="0.01"
        required
      /><br /><br />

      <label for="collegeCGPA">Overall College CGPA:</label>
      <input
        type="number"
        id="collegeCGPA"
        name="collegeCGPA"
        step="0.01"
        required
      /><br /><br />

      <label for="domain">Domain:</label><br />
      <input
        type="checkbox"
        id="frontendDev"
        name="domain"
        value="Frontend Web Development"
      />
      <label for="frontendDev">Frontend Web Development</label><br />

      <input
        type="checkbox"
        id="backendDev"
        name="domain"
        value="Backend Web Development"
      />
      <label for="backendDev">Backend Web Development</label><br />

      <input
        type="checkbox"
        id="fullstackDev"
        name="domain"
        value="Full-stack Web Development"
      />
      <label for="fullstackDev">Full-stack Web Development</label><br />

      <input
        type="checkbox"
        id="androidDev"
        name="domain"
        value="Android Development"
      />
      <label for="androidDev">Android Development</label><br />

      <input type="checkbox" id="testing" name="domain" value="Testing" />
      <label for="testing">Testing</label><br />

      <input
        type="checkbox"
        id="machineLearning"
        name="domain"
        value="Machine Learning"
      />
      <label for="machineLearning">Machine Learning</label><br />

      <input
        type="checkbox"
        id="deepLearning"
        name="domain"
        value="Deep Learning"
      />
      <label for="deepLearning">Deep Learning</label><br /><br />

      <label for="language">Programing Languages:</label>
      <input type="text" id="language" name="language" required /><br /><br />

      <input type="submit" value="Submit" />
    </form>
  </body>
</html>
